@model Category
<form method="post">
    <div class="row border p-3 mt-4">
        <div class="row pb-3">
            <h2 class="text-primary">Delete Category</h2>
            <br />
        </div>
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="All"></div>
        <div class="row pb-3">
            <label asp-for="Name"></label>
            <input disabled asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="row pb-3">
            <label asp-for="DispalyOrder"></label>
            <input disabled asp-for="DispalyOrder" class="form-control" />
            <span asp-validation-for="DispalyOrder" class="text-danger"></span>
        </div>
        <button class="btn btn-danger" type="submit">Delete</button>
    </div>
    <a asp-area="Admin" asp-action="index" asp-controller="category">Get Back</a>
</form>

@section Scripts{
   @{
       <partial name="_ValidationScriptsPartial"/>
   }
}