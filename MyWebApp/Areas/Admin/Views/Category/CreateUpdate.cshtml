@model MyApp.Models.ViewModel.CategoryVM
<form method="post">
    <div class="row border p-3 mt-4">
        <div class="row pb-3">
            <h2 class="text-primary">@((Model.category == null || Model.category.Id == 0) ? "Create" : "Update")</h2>
            <br />
        </div>
        <input type="hidden" asp-for="category.Id" />

        <div asp-validation-summary="All"></div>
        <div class="row pb-3">
            <label asp-for="category.Name"></label>
            <input asp-for="category.Name" class="form-control" />
            <span asp-validation-for="category.Name" class="text-danger"></span>
        </div>
        <div class="row pb-3">
            <label asp-for="category.DispalyOrder"></label>
            <input asp-for="category.DispalyOrder" class="form-control" />
            <span asp-validation-for="category.DispalyOrder" class="text-danger"></span>
        </div>
        @if (Model.category == null || Model.category.Id == 0)
        {
            <button class="btn btn-primary" type="submit">Create Category</button>
        }
        else
        {
            <button class="btn btn-primary" type="submit">Update Category</button>
        }
    </div>
    <a asp-area="Admin" asp-action="index" asp-controller="category">Get Back</a>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}