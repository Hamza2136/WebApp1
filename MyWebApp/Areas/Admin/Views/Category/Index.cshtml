@model MyApp.Models.ViewModel.CategoryVM
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-6 text-primary p-4">
            <h2>List of Category</h2>
        </div>
        <div class="col-6 text-end p-4">
            <a class="btn btn-primary" asp-area="admin" asp-action="CreateUpdate" asp-controller="category"><i class="bi bi-plus-square"></i>&nbspClick to Add Category</a>
        </div>
    </div>
</div>
<div>
    <table class="table table-striped table-bordered w-100">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model.categories)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.DispalyOrder</td>
                    <td role="group">
                        <a asp-action="CreateUpdate" asp-controller="category" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                        <a asp-action="Delete" asp-controller="category" asp-route-id="@item.Id"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
            }
            
        </tbody>
    </table>
</div>

