@model IEnumerable<MyApp.Models.Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-1">
    <h1 class="pb-2">Our Top Products</h1>
    <div class="row pb-4">
        @foreach(var item in Model)
        {
            <div class="card" style="width: 18rem; margin:15px;">
                <img class="card-img-top img-thumbnail" src="@item.ImageUrl" style="height:200px; width:300px" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">Price: @item.Price.ToString("0.00") RS</p>
                    <a asp-action="Details" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                </div>
            </div>
        }
    </div>
</div>